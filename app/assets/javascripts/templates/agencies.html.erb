<div class="container">
  <div class="col-md-12">
    <h1>Backend Challenge</h1>
  </div>
  <div class="col-md-8">
    <div ng-repeat="agency in agencies | orderBy:'grade' | filter:{name:name_filter} | tagsFilter:tag_filter">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row">
            <div class="col-md-4">
              <h3 class="panel-title pull-left">{{agency.name}}</h3>
            </div>
            <div class="col-md-6">
              <ul class="panel-tags list-inline">
                <li class="panel-tag" ng-repeat="tag in agency.tag_list">{{tag}}</li>
              </ul>
            </div>
            <div class="col-md-2">
              <span class="panel-grade pull-right grade <%= '{{agency.grade}}' %>">{{agency.grade}}</span>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <p>{{agency.description}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="panel-title">Filter your agencies</span>
      </div>
      <div class="panel-body">
        <form role="form">
          <div class="form-group">
            <label for="name">Filter by name:</label>
            <input id="name" type="text" class="form-control" placeholder="A1 Agency" ng-model="name_filter">
          </div>
          <div class="form-group">
            <label for="tags">Filter by tags:</label>
            <input id="tags" type="text" class="form-control" placeholder="Digital Advertising, User Experience" ng-model="tag_filter">
          </div>
        </form>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <span class="panel-title">Add an agency</span>
      </div>
      <div class="panel-body">
        <form name="new_agency" role="form" ng-submit="submitForm()">
          <div class="form-group">
            <label for="new_agency.name">Name:</label>
            <input id="new_agency.name" type="text" class="form-control" ng-model="new_agency.name">
          </div>
          <div class="form-group">
            <label for="new_agency.description">Description:</label>
            <input id="new_agency.description" type="text" class="form-control" ng-model="new_agency.description">
          </div>
          <div class="form-group">
            <label for="new_agency.tag_list">Tags:</label>
            <input id="new_agency.tag_list" type="text" class="form-control" placeholder="separate with a comma" ng-model="new_agency.tag_list">
          </div>
          <div class="form-group">
            <label for="new_agency.grade">Grade:</label>
            <select id="new_agency.grade" name="new_agency.grade" type="text" class="form-control" ng-model="new_agency.grade">
              <option value="padawan">Padawan</option>
              <option value="jedi" selected>Jedi</option>
              <option value="master">Master</option>
            </select>
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
